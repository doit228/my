<h2 class="page-header">Search Books</h2>

<form action="/books" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%= searchOpt.title %>" />
    </div>
  </div>

  <div class="form-row">
    
    <div class="form-item">
      <label for="publishedAfter">Published After</label>
      <input
        type="date"
        name="publishedAfter"
        id="publishedAfter"
        value="<%= searchOpt.publishedAfter %>"
      />
    </div>
  
    <div class="form-item">
      <label for="publishedBefore">Published Before</label>
      <input
        type="date"
        name="publishedBefore"
        id="publishedBefore"
        value="<%= searchOpt.publishedBefore %>"
      />
    </div>
  </div>

<div class="form-row form-row-end ">
  <button class="btn btn-primary"type="submit">Search</button>

</div>
</form>

<br />
<h3>All books</h3>
<div>
  <%- include('../partials/bookGrid.ejs', {
    books: books,
    large: true
  }) %> 
</div>
